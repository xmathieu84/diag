{% extends 'militaire/baseMilitaire.html.twig' %}
{% block title %}
    Carte des interventions
{% endblock %}
{% block user %}
    Espace de {{ user.miltaire.nomBase|capitalize }}
{% endblock %}
{% block body %}

    <div class="row">
        <div class="col-sm-12 mt-5">
            <div class="row">
                <div class="col-sm-6">
                    <select class="custom-select dateInter">
                        <option value="1jour">Intervention du jour</option>
                        <option value="7jour">Intervention à 7 jours</option>
                        <option value="1mois">Intervention du mois</option>
                    </select>
                </div>
                <div class="col-sm-6">
                    <select class="custom-select distanceInter">
                        <option value="100">100 km</option>
                        <option value="150">150 km</option>
                        <option value="200">200 km</option>
                        <option value="1200">Toute la France</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="col-sm-1"></div>
        <div class="col-sm-10 text-center mt-5 mb-5">
            <div class="carteInter"></div>

        </div>
        <div class="col-sm-1"></div>
        <div class="col-sm-12 text-center mt-5">
            <h3>Listes des différentes missions</h3>
        </div>
        <div class="col-sm-12 mt-5">
            
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th>Date de debut</th>
                        <th>Date de fin</th>
                        <th>Adresse</th>
                        <th>OTD présent</th>
                    </tr>
                    </thead>
                    <tbody class="tbody"></tbody>
                </table>
            </div>
        </div>

    </div>
{% endblock %}