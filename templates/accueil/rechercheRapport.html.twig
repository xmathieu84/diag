{% extends 'accueil/baseaccueil.html.twig' %}
{% block title %}
    Recherche unique d'un rapport
{% endblock %}


    {% block bodyAccueil %}
        <section class="ls s-py-xl-150 s-py-lg-120 s-py-md-80 s-py-50">
            <div class="container">
                <div class="row">
                    <div class="col-12 text-center mb-5">
                        <p class="h3">Recherche unique d'un rapport </p>
                        <p class="h7">Une fois téléchargé , le code du rapport ne sera plus valable.</p>
                    </div>
                    <div class="col-2"></div>
                    <div class="col-8 mt-4">
                        <label for="codeRapport">Code du rapport recherché</label>
                        <input type="text" name="" id="codeRapport">
                    </div>
                    <div class="col-2"></div>
                    <div class="col-2"></div>
                    <div class="col-8 mt-4">
                        <label for="mail">Adresse e-mail </label>
                        <input type="text" name="" id="mail">
                    </div>
                    <div class="col-2"></div>
                    <div class="col-12 mt-5 mb-5 text-center zoneReponse">
                        <button class="btn btn-maincolor ">Rechercher</button>
                    </div>
                    <div class="col-3 archive"></div>
                    <div class="col-3 rapport"></div>
                    <div class="col-3 videoM"></div>
                    <div class="col-3 photo"></div>
                </div>
            </div>
        </section>
        <div class="modal fade" id="videoModal" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog"style="max-width:100%;max-height: 100%">
                <div class="modal-content" >
                    <div class="modal-header">
                        <h5 class="modal-title" id="staticBackdropLabel">Vidéos du rapport d'intervention</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-12 text-center">
                                <embed src="" type="video/webm" id="videoRapport1" width ="1000" height="750">
                            </div>
                            <div class="col-12 text-center">
                                <embed src="" type="video/webm" id="videoRapport2" >
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>

                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="photoModal" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog" style="max-height: 100%">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="staticBackdropLabel">Photos du rapport d'intervention</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div id="carouselRapportPhoto" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner photoRapport">

                            </div>
                            <a class="carousel-control-prev" href="#carouselRapportPhoto" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Précedent</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselRapportPhoto" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Suivant</span>
                            </a>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

                    </div>
                </div>
            </div>
        </div>

    {% endblock %}





