{% extends 'accueil/baseaccueil.html.twig' %}

{% block title %}Je recherche un drone
{% endblock %}

{% block bodyAccueil %}
    <section class="ls service-single s-py-xl-150 s-py-lg-130 s-py-md-90 s-py-60 bg-white">
        <div class="container pb-3">
            <div class="row">

                <div class="col-12">
                    <h3 class="title_connect">
                        Vérifiez la présence d'Opérateurs Télé-pilotes de Drone
                        <span class="color_blue">près de chez vous</span>!
                    </h3>
                </div>
                <div class="col-6 mt-5 text-center">
                    <label for="listeInter">Choisissez le type d'intervention</label>
                    <select name="" id="listeInter">
                        <option value="">Type d'intervention</option>
                        {% for inter in typeInter  %}
                            <option value="{{ inter.id }}">{{ inter.nom }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-6 mt-5 text-center">
                    <label for="">Affinez votre type d'intervention</label>
                    <select name="" id="typeInter">

                    </select>
                </div>
                <div class="col-2"></div>
                <div class="col-8 text-center mt-5">
                    <label for="adresse">Adresse de l'intervention (numéro, rue, code postal et ville)</label>
                    <input type="text" name="adresse" id="adresse" list="listAdresse">
                    <datalist id="listAdresse" class="color-dark" aria-expanded="true">

                    </datalist>
                </div>
                <div class="col-2"></div>

                <div class="col-12 text-center mt-5 mb-3">
                    <button class="btn btn-outline-maincolor">Valider</button>
                </div>
            </div>
            {#<div class="row mt-1 bg-grey-light">
                <div class="col-12 bg-white" >
                    {% include('publicite/bandeau_pub.html.twig') %}
                </div>
            </div>#}
        </div>
    </section>
    <button type="button" class="btn-masque" data-toggle="modal" data-target="#modalresult"></button>
    <div class="modal fade" id="modalresult" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" id="modalDrone">
            <div class="modal-content" >
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Résultat de votre demande</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p class="message"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Modifier ma demande</button>
                    <a href="{{ path('inscriptionDem',{type:'demandeur'}) }}" class="btn btn-primary">S'inscrire pour réserver</a>
                    <a href="{{ path('app_login') }}" class="btn btn-info">Se connecter</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block bandeau_pub %}
    <div class="row justify-content-center pb-1">
        <div class="col-12 col-lg-10 col-xl-8">
            {% include('publicite/bandeau_pub.html.twig') %}
        </div>
    </div>
{% endblock %}