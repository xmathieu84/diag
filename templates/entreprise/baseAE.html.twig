{% extends "base.html.twig" %}
{% block mobileConnect %}{{path('app_logout')}}{% endblock %}
{% block lienAccueil %}{{path('app_logout')}}{% endblock %}
{% block monEspace %}
	<a href="{{ path('entreprise') }}">
		<small>Mon espace</small>
		<i class="fas fa-user"></i>
	</a>
{% endblock %}

{% block connexion %}

	<nav class="top-nav justify-nav-end  ">
		{% block menu %}
		<div class="d-xl-none right">
			<a class="login-form-btn back__office" href="{{path('app_logout')}}">
                <small>Se déconnecter</small>
                <i class="fas fa-user"></i>
            </a>
		</div>
			
		{% endblock %}

		<ul class="nav sf-menu">
			<li>
				<a href="{{ path('entreprise') }}">Espace Personnel</a>
			</li>
			<li>
				<a href="{{ path('modifierEnt') }}">Mes infos</a>
			</li>
			<li>
				<a href="/DIAG DRONE - Guide de l'utilisateur - Interface Opérateur Télépilote de Drone.pdf" target="_blank">Guide d'utilisation</a>
			</li>

			<li class="mr-3 onMobile text-center">

				<div class="row d-inline-flex align-items-center">
                    <span class="left logoMenu">

                    </span>
					<span class="right">
                        <a class="login-form-btn" href="{{path('app_logout')}}">
                            <small>Se déconnecter</small>
                            <i class="fas fa-user"></i>
                        </a>
                    </span>
				</div>
			</li>
		</ul>
	</nav>
{% endblock %}

{% block body %}

	<section class="ls bg-grey-light py-5">
		<div class="container-fluid">
			<div class="d-lg-none">
                <header class="page_header_side header_side_sticked ls ">
                    <span class="toggle_menu toggle_menu_side header-slide"><span></span></span>
                    <div class="scrollbar-macosx">
                        <div class="side_header_inner pt-0">
                            <div class="header-side-menu">
                                <!-- main side nav start -->
                                <nav class="mainmenu_side_wrapper bg-white">
                                	{% include 'entreprise/navMenu.html.twig' %}
                                </nav>
                            </div>
                        </div>
                    </div>
                </header>
            </div>

			<div class="row mt-5 pt-3 ml-0">
				<div class="col-lg-2 col-xl-2 pl-0 d-none d-lg-block">


					<h5 class="title_side_dashboard mb-0">Navigation
					</h5>
					<nav class="bg-white">
						{% include 'entreprise/navMenu.html.twig' %}
					</nav>
				</div>

				<main class="col-lg-10 col-md-12">
					<div class="breadcrumb-wrap justify-content-start mb-1">
                        <ol class="breadcrumb">
                            {% if app.request.attributes.get('_route') != "entreprise" %}
                            <li class="breadcrumb-item">
                                <a href="{{path('entreprise')}}">Accueil</a>
                            </li>
                            {% endif %}
                            <li class="breadcrumb-item active">
                                {% block title %}{% endblock %}
                            </li>
                        </ol>
                    </div>
					<div class="text-center mb-4 mt-4">
						{% block pageAccueil %}{% endblock %}
					</div>
					{% block contenu %}{% endblock %}
					{% block bodyAccueil %}{% endblock %}
				</main>
			</div>
		</div>
	</section>


{% endblock %}
{% block cg %}
	<li class="mt-3"><a href="{{ path('consultCg') }}">Conditions générales</a></li>
{% endblock %}
{% block javascripts %}
	<script src="/js/js_site/interEntreprise.js"></script>
	<script src="/js/js_site/logoEnt.js"></script>
	{#<script src="/js/js_site/navMenu.js" route="{{ path(app.request.attributes.get('_route')) }}"></script>#}
	<script type="text/javascript">
		$('.page_header ').find('.toggle_menu').hide();
	</script>
	{% block javascripts2 %}
	{% endblock %}
{% endblock %}
{% block contact %}{% endblock  %}
