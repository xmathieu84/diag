{% extends template %}
{% block title %}Mes tarifs
{% endblock %}
{% block TitreEntreprise %} <h1>Tarifs souscrits</h1>{% endblock  %}
{% block entreprise %}



<section class="ls s-py-xl-160 s-py-lg-130 s-py-md-90 s-py-60 c-gutter-60">
	<div class="container">
		<div class="row">
			


			<div class="col-6">
				<h4>Tarifs conseillés souscrits</h4>
				<div id="accordion01" role="tablist">
					{% for tarifAdmin in tarifAdmins %}
					<div class="card">
						<div class="card-header" role="tab" id="collapse0{{loop.index}}_header">
							<h5>
								<a data-toggle="collapse" href="#collapse0{{loop.index}}" aria-expanded="true"
									aria-controls="collapse0{{loop.index}}">
									{{tarifAdmin.typeDonnee.nom}}
								</a>
							</h5>
						</div>

						<div id="collapse0{{loop.index}}" class="collapse show" role="tabpanel"
							aria-labelledby="collapse{{loop.index}}_header" data-parent="#accordion01">
							<div class="card-body">
								<p class="h5">{{tarifAdmin.nom}}</p>
								<p class="h3">{{tarifAdmin.prix}}€</p>
								<br><br>
								{% for SecteurIntervention in SecteurInterventions %}
									<p class="h6">{{SecteurIntervention.nom}} : {{ tarifAdmin.prix}}€</p>
								{% endfor %}
							</div>
						</div>
					</div>

					{% endfor %}
				</div>
			</div>

			<div class="col-6">
				<h4>Tarifs personnalisés saisis</h4>
				<div id="accordion02" role="tablist">
					{% for tarifPerso in tarifPersos %}
					<div class="card">
						<div class="card-header" role="tab" id="collapse01{{loop.index}}_header">
							<h5>
								<a data-toggle="collapse" href="#collapse01{{loop.index}}" aria-expanded="true"
									aria-controls="collapse01{{loop.index}}">
									{{tarifPerso.typeInter.nom}}
								</a>
							</h5>
						</div>

						<div id="collapse01{{loop.index}}" class="collapse show" role="tabpanel"
							aria-labelledby="collapse1{{loop.index}}_header" data-parent="#accordion02">
							<div class="card-body">
								<p class="h3">{{tarifPerso.prix}}€</p>
							</div>
						</div>
					</div>

					{% endfor %}
					<br>
					
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-6"></div>
			<div class="col-6">

				
			</div>
		</div>
		
	</div>
</section>
{% endblock  %}