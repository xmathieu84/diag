{% extends 'entreprise/baseAE.html.twig' %}
{% block title %}
	Compléter mes Maps
{% endblock %}
{% block pageAccueil %}
	<h4>Compléter mes Maps</h4>
{% endblock %}
{% block contenu %}
	{% if interventions is empty %}
		<div class="row">
			<div class="col-sm-12">
				<p class="h4">Vous n'avez pas de MANEX à compléter</p>
			</div>
		</div>
	{% endif %}

	<div id="accordion01" role="tablist" class="">

		{% for intervention in interventions %}

			<div class="card">
				<div class="card-header" role="tab" id="collapse{{loop.index}}_header">
					<h5>
						<a data-toggle="collapse" href="#collapse{{loop.index}}" aria-expanded="true" aria-controls="collapse{{loop.index}}">
							Intervention du
							{{intervention.rdvAT|format_datetime('full', 'short', locale='fr')}}

						</a>
					</h5>
				</div>

				<div id="collapse{{loop.index}}" class="collapse" role="tabpanel" aria-labelledby="collapse{{loop.index}}_header" data-parent="#accordion{{loop.index}}">


					<div class="card-body">
						<div class="row">
							<div class="col-sm-6 text-center">
								<p class="h6">Durée du vol</p>
								<div class="row">
									<div class="col-sm-6 mt-2">
										<p class="h7">Heures</p>
										<select class="heures">
											{% for i in 0..23 %}
												<option value="{{i}}">{{i}}</option>

											{% endfor %}
										</select>


									</div>

									<div class="col-sm-6 mt-2">
										<p class="h7">Minutes</p>

										<select class="minutes">
											{% for j in 0..59 %}
												<option value="{{j}}">{{j}}</option>

											{% endfor %}
										</select>

									</div>

								</div>
							</div>
							<div class="col-sm-6">
								<p class="h6">Observations</p>
								<textarea class='observation' cols="30" rows="10" data-inter="{{intervention.id}}"></textarea>
							</div>
							<div class="col-sm-12 text-center mt-5">
								<button class="btn btn-maincolor">Valider</button>
							</div>
						</div>

					</div>
				</div>
			</div>


		{% endfor %}
	</div>

{% endblock %}
