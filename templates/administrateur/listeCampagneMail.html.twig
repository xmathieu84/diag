{% extends 'administrateur/baseA.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="accordion" id="accordionExample">
        {% for campagne  in campagnes %}


                <div class="card mb-2">
                    <div class="card-header" id="heading{{ loop.index }}">
                        <h2 class="mb-0">
                            <button class="btn btn-link btn-block text-left collapsed"  type="button" data-toggle="collapse" data-target="#collapse{{ loop.index }}" aria-expanded="false" aria-controls="collapse{{ loop.index }}">
                                <span class="h4">{{campagne.description}} - {{ campagne.cible }} le {{ campagne.date|format_datetime('short','none',locale="fr") }}</span>
                            </button>
                        </h2>
                    </div>
                    <div id="collapse{{ loop.index }}" class="collapse" aria-labelledby="heading{{ loop.index }}" data-parent="#accordionExample">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-12 text-center">
                                    <p class="h1">{{ campagne.titreEmail }}</p>
                                </div>
                                <div class="col-12">
                                    {% for contenu in campagne.contenu %}
                                        <p class="h6">{{ contenu }}</p>
                                    {% endfor %}
                                    <p class="h6">{{ campagne.codePromo }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


        {% endfor %}
        </div>
    </div>
</div>
{% endblock %}

{% block title %}
Liste des campagnes de mail
{% endblock %}

