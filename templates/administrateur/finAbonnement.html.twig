{% extends "administrateur/baseA.html.twig" %}

{% block body %}
<section class="wrapper">
<div class="row mt">
		<div class="col-lg-12">
			<div class="content-panel">
                <h1>Fin abonnement</h1>
				<section id="unseen">
                    <table class="table table-bordered table-striped table-condensed">
                        <thead>
                            <th>Nom de l'entreprise</th>
                            <th>Type d'abonnement</th>
                            <th>Date de début</th>
                            <th>Date de fin</th>
                            <th>Date du rappel</th>
                            <th></th>
                            <th></th>
                        </thead>
                        <tbody>
                            {% for entreprise in entreprises %}
                               <tr> <td>{{entreprise.enseigne}} {{entreprise.denomination}}</td>
                                <td>{{entreprise.abonnements.nom}}</td>
                                <td>{{entreprise.dateDebutAbonnement|format_datetime('short', 'none', locale='fr')}}</td>
                                <td>{{entreprise.dateFinAbonnement|format_datetime('short', 'none', locale='fr')}}</td>
                                {% if entreprise.mailRappel == null %}
                                <td>Pas de rappel envoyé</td>
                                <td><button type="button" class="btn btn-sm btn-danger mail"data-identifiant="{{entreprise.user.id}}">Envoyer mail de rappel</button></td>
                                {% else %}
                                    <td>{{entreprise.mailRappel|format_datetime('short', 'none', locale='fr')}}</td>
                                <td><button type="button" class="btn btn-sm btn-warning mail" data-identifiant="{{entreprise.user.id}}">Renvoyer mail de rappel</button></td>
                                {% endif %}
                               </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </section>
            </div>
            <div class="content-panel">
                <h1>Abonnement terminé</h1>
            
              <section id="unseen">
                    <table class="table table-bordered table-striped table-condensed">
                        <thead>
                            <th>Nom de l'entreprise</th>
                            <th>Type d'abonnement</th>
                            <th>Date de début</th>
                            <th>Date de fin</th>
                            <th>Date du rappel</th>
                            <th></th>
                            <th></th>
                        </thead>
                        <tbody>
                    {% for entreprise in entreprisesFin %}
                        <tr> <td>{{entreprise.enseigne}} {{entreprise.denomination}}</td>
                                <td>{{entreprise.abonnements.nom}}</td>
                                <td>{{entreprise.dateDebutAbonnement|format_datetime('short', 'none', locale='fr')}}</td>
                                <td>{{entreprise.dateFinAbonnement|format_datetime('short', 'none', locale='fr')}}</td>
                                
                                
                                
                                    <td>{{entreprise.mailRappel|format_datetime('short', 'none', locale='fr')}}</td>
                                <td><button type="button" class="btn btn-sm btn-success termine" data-identifiant="{{entreprise.id}}">Terminer l'abonnement</button></td>
                                
                               </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                
                </section>              
            </div>      
               
            </div>
        </div>
    </div>
</section>




{% endblock %}