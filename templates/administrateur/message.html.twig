{% block body %}
<section class="wrapper">

    <div class="row mt">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
            {{form_start(form)}}

            {{form_label(form.sujet,'Sujet du message',{'label_attr':{'class':'control-label col-md-3'}})}}
            {{form_row(form.sujet,{'label':' ','attr':{'class':'form-control'}})}}
            <div class="col-lg-12" id="destinataire">
                {{form_label(form.selectionDestinataire,'SÃ©lection des destinataires',{'label_attr':{'class':'control-label col-md-6'}})}}
