{% extends 'accueil/baseaccueil.html.twig' %}

{% block title %}
    Inscription institutionnel
{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="/css/css_site/css/inscription.css">
{% endblock %}
{% block bodyAccueil %}
    <section class="ls bg-grey-light">
        <div class="container">
            <div class="row mt-5">
                <div class="col-12">
                    <div class="bg-white py-2 px-5">
                        <h4 class="d-inline divider-right" >Inscription</h4>
                    </div>
                </div>

            </div>
            <div class="row">
                <main class="col-lg-12">
                    <p class="h7">Les champs marqués d'une * sont obligatoires</p>
                    {{form_start(form,{'attr':{'id':'regForm'}})}}
                    <div class="tab">
                        <div class="row">
                            <div class="col-12 text-center">
                                <h5 class="mb-3">Informations générales :</h5>
                            </div>
                            <div class="col-sm-2"></div>
                            <div class="col-sm-8 text-center">
                                <div class="form-group has-placeholder">


                                        <label>Profil *</label>

                                        <div class="form-group has-placeholder">
                                            {{ form_row (form.type,{'label': ' ','attr':{'class':'form-control form-control-lg text-center'}})}}

                                        </div>
                                        <label>Nom</label>
                                        {{ form_row (form.nom,{'label': ' ','attr':{'class':'form-control form-control-lg text-center','required':'required'}})}}




                                </div>
                            </div>
                            <div class="col-sm-2"></div>
                            <div class="col-sm-6">
                                <div class="form-group has-placeholder">
                                    <p class="h6">Numéro de SIRET</p>
                                    {{ form_row (form.siret.siret,{'label': ' ','attr':{'placeholder': 'Numéro de SIRET','class': 'form-control form-control-lg border-dark','maxlength':'14'}})}}

                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group has-placeholder">
                                    <p class="h6">Numéro de TVA</p>
                                    {{ form_row (form.siret.tva,{'label': ' ','attr':{'placeholder' : 'TVA','class': 'form-control form-control-lg border-dark',"placeholder":"Numéro de TVA",'maxlength':'13'}})}}

                                </div>
                            </div>

                        </div>
                    </div>


                    <div class="tab">
                        <div class="row">
                            <div class="col-12 text-center">
                                <h5 class="mb-3">Contact :</h5>
                            </div>
                            <div class="col-sm-12 text-center">


                                {{form_row(form.contact.type,{'label' : ' ' })}}


                            </div>


                            <div class="col-sm-6">
                                <div class="form-group has-placeholder">
                                    <label>Nom  *</label>
                                    {{form_row(form.contact.nom,{'label' : ' ' ,'attr':{'class':"form-control form-control-lg","placeholder":"Nom *"}})}}


                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group has-placeholder">
                                    <label>Prénom  *</label>
                                    {{form_row(form.contact.prenom,{'label' : ' ' ,'attr':{'class':"form-control form-control-lg","placeholder":"Prénom  *"}})}}


                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group has-placeholder">
                                    <label>Numéro de téléphone *</label>
                                    {{form_row(form.telephone.numero,{'label' : ' ' ,'attr':{'class':"form-control form-control-lg","placeholder":"Numéro de téléphone *"}})}}


                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group has-placeholder">
                                    <label>
                                        Adresse mail de contact *</label>
                                    {{form_row(form.user.email,{'label' : ' ' ,'attr':{'class':"form-control form-control-lg","placeholder":"Email *"}})}}


                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group has-placeholder">
                                    <label>Mot de passe *(8 caractères minimum)</label>
                                    {{form_row(form.user.password,{'label' : ' ' ,'attr':{'class':"form-control form-control-lg","placeholder":"Mot de passe *"}})}}


                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group has-placeholder">
                                    <label>
                                        Confirmez votre mot de passe *</label>
                                    {{form_row(form.user.confirm_password,{'label' : ' ' ,'attr':{'class':"form-control form-control-lg","placeholder":"Confirmez le mot de passe *"}})}}


                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="tab">
                        <div class="row">
                            <div class="col-12 text-center">
                                <h5 class="mb-3">Localisation :</h5>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group has-placeholder">
                                    <label>Numéro </label>
                                    {{form_row(form.adresse.numero,{'label' : ' ' ,'attr':{'class':"form-control form-control-lg","placeholder":"Numéro de la voie *"}})}}

                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group has-placeholder">
                                    <label>Voie</label>
                                    {{form_row(form.adresse.nomVoie,{'label' : ' ' ,'attr':{'class':"form-control form-control-lg","placeholder":"Nom de la voie *"}})}}

                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group has-placeholder">
                                    <label>Code postal *
                                    </label>
                                    {{form_row(form.adresse.code_postal,{'label' : ' ' ,'attr':{'class':"form-control form-control-lg","placeholder":"Code postal *"}})}}


                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group has-placeholder">
                                    <label>
                                        Ville*(Tapez d'abord votre code postal)
                                    </label>
                                    {{form_row(form.adresse.ville,{'label' : ' ' ,'attr':{'class':"form-control form-control-lg","placeholder":"Ville*(Tapez d'abord votre code postal)",'list':"city"}})}}


                                    <datalist id="city"></datalist>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div style="overflow:auto;">
                        <div style="float:right;">
                            <button type="button" id="prevBtn" onclick="nextPrev(-1)">Précédent</button>
                            <button type="button" id="nextBtn" onclick="nextPrev(1)">Suivant</button>
                        </div>
                    </div>
                    <!-- Circles which indicates the steps of the form: -->
                    <div style="text-align:center;margin-top:40px;">
                        <span class="step"></span>
                        <span class="step"></span>
                        <span class="step"></span>
                    </div>
                    {{form_widget(form._token)}}

                    {{ form_end(form, {'render_rest': false})}}


                </main>
            </div>
        </div>


    </section>
    <script>
        var currentTab = 0; // Current tab is set to be the first tab (0)
        showTab(currentTab); // Display the current tab

        function showTab(n) { // This function will display the specified tab of the form...
            var x = document.getElementsByClassName("tab");
            x[n].style.display = "block";
// ... and fix the Previous/Next buttons:
            if (n == 0) {
                document.getElementById("prevBtn").style.display = "none";
            } else {
                document.getElementById("prevBtn").style.display = "inline";
            }
            if (n == (x.length - 1)) {
                document.getElementById("nextBtn").innerHTML = "Envoyer";
            } else {
                document.getElementById("nextBtn").innerHTML = "Suivant";
            }
// ... and run a function that will display the correct step indicator:
            fixStepIndicator(n)
        }

        function nextPrev(n) { // This function will figure out which tab to display
            var x = document.getElementsByClassName("tab");
// Exit the function if any field in the current tab is invalid:
            if (n == 1 && !validateForm())
                return false;



// Hide the current tab:
            x[currentTab].style.display = "none";

// Increase or decrease the current tab by 1:
            currentTab = currentTab + n;
// if you have reached the end of the form...
            if (currentTab >= x.length) { // ... the form gets submitted:
                document.getElementById("regForm").submit();
                return false;
            }
// Otherwise, display the correct tab:
            showTab(currentTab);
        }

        function validateForm() { // This function deals with validation of the form fields
            var x,
                y,
                i,
                valid = true;
            x = document.getElementsByClassName("tab");
            y = x[currentTab].getElementsByTagName("input");
// A loop that checks every input field in the current tab:
            for (i = 0; i < y.length; i++) { // If a field is empty...
                if (y[i].value == "") {
// add an "invalid" class to the field:

// and set the current valid status to false
// if fields is required and value is empty, return false, otherwise, valid is true
                    if (y[i].required && y[i].value == "") {

                        y[i].className += " invalid";
                        valid = false;
                        return
                    }
                    valid = true;
                }
            }
// If the valid status is true, mark the step as finished and valid:
            if (valid) {
                document.getElementsByClassName("step")[currentTab].className += " finish";
            }
            return valid; // return the valid status
        }

        function fixStepIndicator(n) { // This function removes the "active" class of all steps...
            var i,
                x = document.getElementsByClassName("step");
            for (i = 0; i < x.length; i++) {
                x[i].className = x[i].className.replace(" active", "");
            }
// ... and adds the "active" class on the current step:
            x[n].className += " active";
        }
    </script>

{% endblock  %}