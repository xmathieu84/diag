{% extends 'accueil/baseaccueil.html.twig' %}

{% block title %}Connexion
{% endblock %}
{% block titrePage %}

	<h1>Espace de connexion</h1>
{% endblock %}


{% block nomPage %}Connexion
{% endblock %}

{% block bodyAccueil %}
	<section class="ls s-py-xl-150 s-py-lg-120 s-py-md-80 s-py-50">
		<div class="container">
			<div class="row">


				<article>

					<div class="entry-content">
						{% for message in app.flashes('notice') %}
							<div class="alert alert-success">
								ppp
								{{ message }}
							</div>
						{% endfor %}
						<div class="woocommerce">


							<form class="woocomerce-form woocommerce-form-login login" method="post" action="{{path('connexion')}}">
								<p class="woocommerce-form-row woocommerce-form-row--wide form-row form-row-wide">
									<label for="username">Adresse E-mail

										<span class="required">*</span>
									</label>
									<input type="text" class="woocommerce-Input woocommerce-Input--text input-text" name="_username" id="username" value="" placeholder="E-mail	">
								</p>
								<p class="woocommerce-form-row woocommerce-form-row--wide form-row form-row-wide">
									<label for="password5675">Mot de passe<span class="required">*</span>
									</label>
									<input class="woocommerce-Input woocommerce-Input--text input-text" type="password" name="_password" id="password5675" placeholder="Password">
								</p>

								<p class="form-row">
									<input type="submit" class="woocommerce-Button button" name="login" value="Se connecter">


									<label class="woocommerce-form__label woocommerce-form__label-for-checkbox inline ml-5">
										<input class="woocommerce-form__input woocommerce-form__input-checkbox" name="_rememberme" type="checkbox" id="rememberme" value="forever">
										<span>
												Se souvenir de moi</span>
									</label>
								</p>
								<div class="row">
									<div class="col-md-7 col-sm-12">
										<small class="woocommerce-LostPassword lost_password">
											<a href="{{path('oubliepsswrd')}}">
												> Mot de passe  oubli√© ?</a>
										</small>
									</div>
									<div class="col-md-5 col-sm-12">
										<small>
											<a href="{{path('accueil_sub')}}">

												> Pas encore inscrit ?</a>
										</small>
									</div>
								</div>


							</form>
						</div>
					</div>
				</article>
			</div>
		</div>
	</section>

{% endblock %}
