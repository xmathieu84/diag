{% extends 'accueil/baseaccueil.html.twig' %}

{% block title %}Connexion
{% endblock %}
{% block titrePage %}

    <h1>Espace de connexion</h1>
{% endblock %}


{% block nomPage %}Connexion
{% endblock %}

{% block bodyAccueil %}
<section class="ls s-py-xl-150 s-py-lg-120 s-py-md-80 s-py-50">
    <div class="container">
        <div class="row">


            <main class="col-lg-12">
                <article>

                    <div class="entry-content">
                        <div class="woocommerce">

                                {% if error %}
                                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %}



                                {#
                                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                                    See https://symfony.com/doc/current/security/remember_me.html#}





                            <form class="woocomerce-form woocommerce-form-login login" method="post">
                                <p class="woocommerce-form-row woocommerce-form-row--wide form-row form-row-wide">
                                    <label for="username">Adresse E-mail
                                        {#<small>Merci de renseigner votre code d'identification reçu par mail (exemple : 2536789)</small>#}
                                        <span class="required">*</span>
                                    </label>
                                    <input type="text" value="{{ last_username }}" name="Email" id="inputEmail"  class="woocommerce-Input woocommerce-Input--text input-text" required autofocus placeholder="E-mail	">
                                </p>
                                <p class="woocommerce-form-row woocommerce-form-row--wide form-row form-row-wide">
                                    <label for="password5675">Mot de passe<span class="required">*</span>
                                    </label>
                                    <input class="woocommerce-Input woocommerce-Input--text input-text" type="password" name="password" id="password5675" placeholder="Password">
                                </p>

                                <p class="form-row">
                                    <input type="submit" class="woocommerce-Button button" name="login" value="Se connecter">


                                    <label class="woocommerce-form__label woocommerce-form__label-for-checkbox inline ml-5">
                                        <input class="woocommerce-form__input woocommerce-form__input-checkbox" name="_remember_me" type="checkbox" id="rememberme" value="forever">
                                        <span>
												Se souvenir de moi</span>
                                    </label>
                                </p>
                                <div class="row">
                                    <div class="col-md-7 col-sm-12">
                                        <small class="woocommerce-LostPassword lost_password">
                                            <a href="{{path('oubliepsswrd')}}">
                                                > Mot de passe oublié ?</a>
                                        </small>
                                    </div>
                                    <div class="col-md-5 col-sm-12">
                                        <small>
                                            <a href="{{path('accueil_sub')}}">

                                                > Pas encore inscrit ?</a>
                                        </small>
                                    </div>
                                </div>
                                <input type="hidden" name="_csrf_token"
                                       value="{{ csrf_token('authenticate') }}"
                                >

                            </form>
                        </div>
                    </div>
                </article>
            </main>
        </div>
    </div>
</section>
{% endblock %}
{% block javascripts %}
    <script>
        function noBack(){window.history.forward()}
        noBack();
        window.onload=noBack;
        window.onpageshow=function(evt){if(evt.persisted)noBack()}
        window.onunload=function(){void(0)}
    </script>
{% endblock  %}